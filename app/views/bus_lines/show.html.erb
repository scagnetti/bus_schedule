<ol class="breadcrumb">
  <li><%= link_to 'Buslinien', bus_lines_path %></li>
  <li class="active"><%= @bus_line.name %></li>
</ol>

<h1>Regensburg</h1>
<h4>In welche Richtung möchtest Du fahren?</h4>

<% if logged_in? %>

  <ul class="list-group">
    <% @bus_line.directions.each do |direction| %>
      <li class="list-group-item">
        <%= link_to direction.display_name, direction %> / 
        <%= link_to 'Edit', edit_direction_path(direction) %> / 
        <%= link_to 'Destroy', direction, method: :delete, data: { confirm: 'Are you sure?' } %>
      </li>  
    <% end %>
  </ul>
  <%= link_to 'Richtung hinzufügen', new_direction_path, class: "btn btn-link" %>

<% else %>

  <div class="list-group">
    <% @bus_line.directions.each do |direction| %>
      <%= link_to direction.display_name, direction, class: "list-group-item" %>
    <% end %>
  </div>
 
<% end %>